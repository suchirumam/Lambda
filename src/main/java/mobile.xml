<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="100" name="New Browsers" parallel="tests">


    <test name="Android">
        <parameter name="browser" value="safari"/>
        <parameter name="platformVersion" value="11"/>
        <parameter name="platform" value="Android"/>
        <parameter name="deviceName" value="Galaxy S21"/>
        <classes>
            <class name="demoMobile"/>
        </classes>
    </test>

    <test name="Android1">
        <parameter name="browser" value="safari"/>
        <parameter name="platformVersion" value="10"/>
        <parameter name="platform" value="Android"/>
        <parameter name="deviceName" value="Galaxy A31"/>
        <classes>
            <class name="demoMobile"/>
        </classes>
    </test>

    <test name="iOS">
        <parameter name="browser" value="safari"/>
        <parameter name="platformVersion" value="13.0"/>
        <parameter name="platform" value="iOS"/>
        <parameter name="deviceName" value="iPhone 11"/>
        <classes>
            <class name="demoMobile"/>
        </classes>
    </test>

    <test name="iOS1">
        <parameter name="browser" value="safari"/>
        <parameter name="platformVersion" value="14.0"/>
        <parameter name="platform" value="iOS"/>
        <parameter name="deviceName" value="iPhone 12"/>
        <classes>
            <class name="demoMobile"/>
        </classes>
    </test>



</suite>